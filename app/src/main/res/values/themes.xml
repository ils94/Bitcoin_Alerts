<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BitcoinAlerts" parent="Theme.AppCompat.Light">
        <item name="android:forceDarkAllowed">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/btcorange</item>
        <item name="colorPrimaryVariant">@color/btcorange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/btcorange</item>
        <item name="colorSecondaryVariant">@color/btcorange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionOverflowButtonStyle">@style/Threedotcolor</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="Threedotcolor" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name ="tint">@color/white</item>
    </style>
</resources>