<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".PriceCalculatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_background"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="BTC Price"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/primaryText"
            android:layout_marginBottom="15dp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/BTCamount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="BTC amount"
                android:inputType="number|numberDecimal"
                android:padding="10dp"
                android:background="@drawable/edittext_background"
                tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,VisualLintTextFieldSize" />

            <CheckBox
                android:id="@+id/SATs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SATs"
                android:layout_marginStart="10dp"
                android:textColor="@color/primaryText"
                android:padding="10dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <TextView
            android:id="@+id/priceBRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BRL amount:"
            android:textColor="@color/secondaryText"
            android:layout_marginBottom="10dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/priceUSD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USD amount:"
            android:textColor="@color/secondaryText"
            android:layout_marginBottom="15dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/cal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/btcorange"
            android:text="Calculate"
            android:textColor="@android:color/white"
            tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,TextContrastCheck" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginVertical="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="BTC price in BRL"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/primaryText"
            android:layout_marginBottom="15dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/BRLamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="BRL amount"
            android:inputType="number|numberDecimal"
            android:padding="10dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="15dp"
            tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/priceBRLBTC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BTC amount:"
            android:textColor="@color/secondaryText"
            android:layout_marginBottom="15dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/cal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/btcorange"
            android:text="Calculate"
            android:textColor="@android:color/white"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginVertical="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="BTC price in USD"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/primaryText"
            android:layout_marginBottom="15dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/USDamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittext_background"
            android:hint="USD amount"
            android:inputType="number|numberDecimal"
            android:padding="10dp"
            tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/priceUSDBTC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BTC amount:"
            android:textColor="@color/secondaryText"
            android:layout_marginBottom="15dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/cal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/btcorange"
            android:text="Calculate"
            android:textColor="@android:color/white"
            tools:ignore="HardcodedText,TextContrastCheck" />

    </LinearLayout>

</ScrollView>
